<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ItemHeader">
        <item name="android:textSize">@dimen/list_item_header</item>
        <item name="android:textColor">@color/ltgray</item>
    </style>

    <style name="ItemBody">
        <item name="android:textSize">@dimen/list_item_body</item>
        <item name="android:textColor">@color/ltgray</item>
        <item name="android:paddingStart">@dimen/list_item_body_spacing_edges</item>
        <item name="android:paddingEnd">@dimen/list_item_body_spacing_edges</item>
        <item name="android:paddingBottom">@dimen/list_item_body_spacing_bottom</item>
    </style>
</resources>